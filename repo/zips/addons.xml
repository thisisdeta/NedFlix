    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Manage Nedflix themes and widgets</summary>
        <description>An addon to help manage themes and widgets within the Nedflix skin more easily.</description>
