<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.nedflix" name="Nedflix Repository" version="1.0.0" provider-name="Deta">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/thisisdeta/nedflix/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/thisisdeta/nedflix/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/thisisdeta/nedflix/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Nedflix Repository</summary>
        <description>A repo for the Nedflix skin and other tools</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon><addon id="script.local-resume" version="1.0.3" name="Local Resume" provider-name="ChatGPDeta">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.service" library="service.py">
        <provides>service</provides>
	</extension>
    <extension point="xbmc.addon.metadata">
        <summary>Create local resume points for streamed media</summary>
        <description>An addon that creates local resume points for certain streamed media.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>            
        </assets>
    </extension>
</addon><addon id="script.nedflix.manager" version="1.0.2" name="Nedflix Manager" provider-name="ChatGPDeta">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Manage Nedflix themes and widgets</summary>
        <description>An addon to help manage themes and widgets within the Nedflix skin more easily.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>            
        </assets>
    </extension>
</addon><addon id="skin.nedflix" version="1.0.5" name="Nedflix" provider-name="matke/deta">
	<requires>
		<import version="5.17.0" addon="xbmc.gui" />
		<import addon="script.bingie.helper" version="1.1.2" />
		<import addon="script.bingie.toolbox" version="1.0.0" />
		<import addon="script.bingie.widgets" version="1.0.1" />
		<import addon="script.skinshortcuts" version="2.0.3" />
		<import addon="resource.images.studios.coloured" version="0.0.23" />
		<import addon="plugin.video.themoviedb.helper" version="6.0.9" />
		<import addon="script.wikipedia" version="0.0.6" />
		<import addon="plugin.program.autocompletion" version="2.1.3" />
	</requires>
	<extension debugging="false" defaultthemename="Textures.xbt" effectslowdown="1" point="xbmc.gui.skin">
        <res aspect="16:9" default="true" folder="1080i" height="1080" width="1920" />
    </extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Kodiddly-ho, neighborino!</summary>
		<description lang="en_GB">Kodiddly-ho, neighborino!</description>
		<platform>all</platform>
		<license>GPL v2.0</license>
		<forum />
		<source />
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>			
		</assets>
	</extension>
</addon></addons>