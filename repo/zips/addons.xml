<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.nedflix" name="NedFlix Repository" version="1.0.0" provider-name="Deta">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/thisisdeta/NedFlixSkin/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/thisisdeta/NedFlixSkin/master/repo/zips/addons.xml.md5</checksum>
